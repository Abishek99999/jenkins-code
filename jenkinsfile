pipeline {
    agent any
    parameters {
        string(name: 'person', defaultValue: 'Abishek Singh', description: 'for testing purpose')
    }

    stages {
        stage('run command') {
            steps {
                sh 'date'
                sh 'pwd'
                sh 'df -Th'
            }
        }
        stage('build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('continue ?') {
                input {
                    message "Should we continue?"
                    ok "Yes, we should"
                }
                steps {
                echo 'Deploy on prod'
            }
        }
        stage('prod') {
            steps {
                echo 'Hello World'
            }
        }
    }
    post {
        always {
            echo 'I will always say hello again'
        }
    }
}
